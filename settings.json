// Custom windows terminal json config
{
    // This URL provides help documentation for Windows Terminal
    "$help": "https://aka.ms/terminal-documentation",
    // This URL provides the schema for validating the JSON configuration file
    "$schema": "https://aka.ms/terminal-profiles-schema",
    
    // Actions define custom key bindings
    "actions": 
    [
        {
            "command": "unbound",
            "keys": "enter"  // Unbinds the Enter key
        },
        {
            "command": "unbound",
            "keys": "ctrl+insert"  // Unbinds Ctrl+Insert key
        },
        {
            "command": 
            {
                "action": "copy",
                "singleLine": false  // Copies selected text, allowing multiline
            },
            "keys": "ctrl+c"  // Binds the action to Ctrl+C
        },
        {
            "command": "paste",
            "keys": "ctrl+v"  // Binds the paste action to Ctrl+V
        },
        {
            "command": "find",
            "keys": "ctrl+shift+f"  // Binds the find action to Ctrl+Shift+F
        },
        {
            "command": 
            {
                "action": "splitPane",
                "split": "auto",  // Automatically decides the split direction
                "splitMode": "duplicate"  // Duplicates the current profile in the new pane
            },
            "keys": "alt+shift+d"  // Binds the split pane action to Alt+Shift+D
        }
    ],

    // Clipboard settings
    "copyFormatting": "none",  // Disables formatting when copying
    "copyOnSelect": true,  // Automatically copies text when selected
    
    // Default profile settings
    "defaultProfile": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",  // Sets the default profile

    // Window size settings
    "initialCols": 110,  // Initial number of columns
    "initialRows": 27,  // Initial number of rows
    
    // New tab menu settings
    "newTabMenu": 
    [
        {
            "type": "remainingProfiles"  // Displays remaining profiles in the new tab menu
        }
    ],
    
    // Profile definitions
    "profiles": 
    {
        // Default settings applied to all profiles
        "defaults": 
        {
            "adjustIndistinguishableColors": "indexed",
            "antialiasingMode": "cleartype",
            "colorScheme": "xcad",  // Default color scheme
            "cursorShape": "filledBox",  // Default cursor shape
            "experimental.retroTerminalEffect": false,
            "font": 
            {
                "face": "JetBrainsMonoNL Nerd Font Mono",  // Default font face
                "size": 11.0,  // Default font size
                "weight": "medium"  // Default font weight
            },
            "intenseTextStyle": "bright",
            "opacity": 98,  // Default opacity
            "useAcrylic": false,  // Disable acrylic effect by default
            "useAtlasEngine": false
        },

        // List of individual profiles
